conky.config = {
    background = true,
    use_xft = true,
    font = 'monospace:pixelsize=12',
    xftalpha = 1,
    update_interval = 1.0,
    total_run_times = 0,
    own_window = true,
    own_window_type = 'desktop',
    own_window_class = 'Conky',
    own_window_argb_visual = true,
    own_window_transparent = true,
    own_window_argb_value = 0,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    double_buffer = true,
    draw_shades = false,
    draw_outline = false,
    draw_borders = false,
    draw_graph_borders = true,
    stippled_borders = 0,
    border_inner_margin = 6,
    border_width = 0,
    default_color = '999999',
    default_shade_color = 'black',
    default_outline_color = 'white',
    alignment = 'top_right',
    gap_x = 370,
    gap_y = 810,
    no_buffers = true,
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    override_utf8_locale = true,
    use_spacer = 'none',
    text_buffer_size = 16000,
    maximum_width = 400,

    -- Custom Neon Palette
    color1 = '999999', -- Grey (Labels/Brackets/Rest)
    color2 = '00FFFF', -- Cyan (Numbers/Values/Bars)
    color6 = 'FF0000', -- Red (Tree Structure)
}

conky.text = [[
${voffset 5}
${alignr}${color1}DOWNLOAD${color}
${alignr}${color6}[${color2}${downspeed wlan0}${color6}]${color} ${color1}speed${color} ${color6}[${color2}${totaldown wlan0}${color6}]${color} ${color1}total${color}
${downspeedgraph wlan0 35,300 440000 FF0000 -l -t}
${voffset 3}
${alignr}${color1}UPLOAD${color}
${alignr}${color6}[${color2}${upspeed wlan0}${color6}]${color} ${color1}speed${color} ${color6}[${color2}${totalup wlan0}${color6}]${color} ${color1}total${color}
${upspeedgraph wlan0 35,300 440000 FF0000 -l -t}
]]
